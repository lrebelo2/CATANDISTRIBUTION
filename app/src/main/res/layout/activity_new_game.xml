<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buttonstyle"
    tools:context="com.example.lucas.catandistribution.NewGameActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="278dp"

        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/d5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/d5"
            android:text="5"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/lvdata"
            app:layout_constraintTop_toBottomOf="@+id/d1" />

        <Button
            android:id="@+id/d9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/d3"
            android:text="9"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/lvdata"
            app:layout_constraintTop_toBottomOf="@+id/d5" />

        <Button
            android:id="@+id/d10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/d4"
            android:text="10"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d9"
            app:layout_constraintTop_toTopOf="@+id/d9" />

        <Button
            android:id="@+id/d7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/d1"
            android:text="7"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d6"
            app:layout_constraintTop_toTopOf="@+id/d6" />

        <Button
            android:id="@+id/d8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/d2"
            android:text="8"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d7"
            app:layout_constraintTop_toTopOf="@+id/d6" />

        <Button
            android:id="@+id/d1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/d1"
            android:text="1"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/lvdata"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/d2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/d2"
            android:text="2"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/d11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/d5"
            android:text="11"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d10"
            app:layout_constraintTop_toTopOf="@+id/d10" />

        <Button
            android:id="@+id/d12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/d6"
            android:text="12"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d11"
            app:layout_constraintTop_toTopOf="@+id/d10" />

        <Button
            android:id="@+id/d6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/d6"
            android:text="6"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d1"
            app:layout_constraintTop_toTopOf="@+id/d5" />

        <Button
            android:id="@+id/d4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/d4"
            android:text="4"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d3"
            app:layout_constraintTop_toTopOf="@+id/d3" />

        <Button
            android:id="@+id/d3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/d3"
            android:text="3"
            android:textColor="#4f90f2"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/d2"
            app:layout_constraintTop_toTopOf="@+id/d2" />

        <ListView
            android:id="@+id/lvdata"
            android:layout_width="88dp"
            android:layout_height="227dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="0dp"
            android:background="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/removelast"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="-13dp"
            android:text="Remove Last"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/lvdata"
            app:layout_constraintTop_toBottomOf="@+id/lvdata" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="200dip" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
